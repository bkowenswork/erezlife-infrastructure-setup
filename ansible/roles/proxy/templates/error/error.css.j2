body {
    margin: 0;
    padding: 0 15px;
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 8pt;
    line-height: 1.42857143;
    color: #222222;
    background-color: #ffffff;
}

h1 {
    margin: 0;
    padding: 0;
    color: #8cb2d8;
    font-size: 2em;
    font-weight: normal;
}

p {
    margin: 0.5em 0;
}

a {
    color: #000099;
    text-decoration: underline;
    cursor: pointer;
}

a:hover {
    color: #cc0000;
    text-decoration: none;
}

.page_section {
    max-width: 80em;
    margin-top: 1em;
    margin-bottom: 1.5em;
    padding-bottom: 0.5em;
    border-bottom: 1px solid #bfcfea;
}
